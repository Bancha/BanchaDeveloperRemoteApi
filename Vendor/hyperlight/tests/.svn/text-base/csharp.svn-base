    if (paths.Length == 0) return false;
    // paths **must** be pre-sorted via Array.Sort(paths);
    int index = Array.BinarySearch(paths, fragment);
    // we want the index of the *next highest* path
    if (index < 0) { // no match
        index = ~index; 
