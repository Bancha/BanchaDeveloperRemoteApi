       <summary type="html">&lt;pre&gt;&lt;code&gt;&amp;lt;?php
function toconv(string)
{

   $gogo =  array(
   &quot;a&quot; =&amp;gt; &quot;b&quot;,&quot;cd&quot; =&amp;gt; &quot;e&quot;);
    $string = str_replace( array_keys( $gogo ),
                          array_values( $gogo ),
                          $string);
    return $string;
}
?&amp;gt;
&lt;/code&gt;&lt;/pre&gt;

